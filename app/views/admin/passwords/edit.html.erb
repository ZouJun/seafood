<% content_for :content_for do %>
    <ol class="breadcrumb">
      <li><a href="#">账号管理</a></li>
      <li class="active">修改密码</li>
    </ol>
    <div class="add_agent">
      <%= form_for @staff, url: admin_password_path(@staff), method: :put do |f| %>
          <div class="form-group">
            <label>旧密码：</label>
            <%= f.password_field :current_password, class: "form-control", id: "exampleInputEmail1", placeholder: "请输入旧密码" %>
          </div>
          <div class="form-group">
            <label>新密码：</label>
            <%= f.password_field :password, class: "form-control", id: "exampleInputEmail1", placeholder: "请输入新密码" %>
          </div>
          <div class="form-group">
            <label>确认密码：</label>
            <%= f.password_field :password_confirmation, class: "form-control", id: "exampleInputEmail1", placeholder: "确认密码" %>
          </div>
          <button type="submit" class="btn btn-primary">提交</button>
      <% end %>
    </div>
<% end %>