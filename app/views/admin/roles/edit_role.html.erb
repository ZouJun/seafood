<% content_for :content_for do %>
    <ol class="breadcrumb">
      <li><a href="#">角色管理</a></li>
      <li><a href="#">角色编辑</a></li>
      <li class="active">编辑</li>
    </ol>

    <div class="add_agent">
    <%= form_tag update_role_admin_roles_path, method: :post do %>
        <%= hidden_field_tag :staff_id, @staff.id %>
        <div class="form-group">
          <label for="exampleInputEmail2">员工姓名:<%= @staff.name %></label>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail2">员工编号:<%= @staff.no %></label>
        </div>
        <div class="form-group">
          <%= select("role", "id", Role.all.map {|u| [u.name, u.id]})%>
        </div>

        <div class="form-group">
        <label for="exampleInputEmail2">登陆账号:</label>
          <%= text_field_tag :login, params[:login], class: "form-control" %>
        </div>
        <div class="form-group">
        <label for="exampleInputEmail2">登陆密码:</label>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
        <button type="submit" class="btn btn-default">提交</button>
    <% end %>
</div>
<% end %>