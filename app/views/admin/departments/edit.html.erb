<% content_for :content_for do %>
    <ol class="breadcrumb">
      <li><a href="#">部门管理</a></li>
      <li class="active">编辑</li>
    </ol>

    <div class="add_agent">
    <%= form_for @department, url: admin_department_path(@department) do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", id: "exampleInputEmail1", placeholder: "部门名称" %>
          <!--<%#= f.text_field　:name, class: "form-control", id: "exampleInputEmail1", placeholder: "用户名" %>-->
        </div>
        <div class="form-group">
          <%= f.text_field :sort, class: "form-control", id: "exampleInputEmail1", placeholder: "部门序数" %>
        </div>
        <div class="form-group">
          <%= f.text_field :description, class: "form-control", id: "exampleInputEmail1", placeholder: "部门描述" %>
        </div>
        <button type="submit" class="btn btn-default">提交</button>
    <% end %>
</div>
<% end %>